# Environment Configuration
ENVIRONMENT=development

# API Configuration
API_BASE_URL=https://api.example.com
API_VERSION=v1
API_TIMEOUT=30000

# Firebase Configuration
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Supabase Configuration (if using)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key

# In-App Purchase Configuration
REVENUECAT_API_KEY=your-revenuecat-api-key
REVENUECAT_APPLE_API_KEY=your-revenuecat-apple-api-key
REVENUECAT_GOOGLE_API_KEY=your-revenuecat-google-api-key

# Sentry Configuration
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project

# App Store Configuration
APPLE_ID=your-apple-id@example.com
APPLE_TEAM_ID=YOUR_TEAM_ID
APPLE_APP_SPECIFIC_PASSWORD=your-app-specific-password
GOOGLE_SERVICE_ACCOUNT_KEY_PATH=./secrets/google-service-account.json

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_CRASHLYTICS=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_MESSAGING=true
ENABLE_PHOTO_MANAGEMENT=true
ENABLE_IN_APP_PURCHASES=true

# App Configuration
APP_NAME=Aroosi
APP_BUNDLE_IDENTIFIER=com.yourcompany.aroosi
APP_SCHEME=aroosi

# Expo Public Variables (mirror production .env placeholders)
EXPO_PUBLIC_ENV=development
EXPO_PUBLIC_API_URL=https://your-api.example.com
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your-web-or-default-client-id.apps.googleusercontent.com
EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID=your-web-client-id.apps.googleusercontent.com
EXPO_PUBLIC_GOOGLE_IOS_CLIENT_ID=your-ios-reversed-client-id-if-required
EXPO_PUBLIC_GOOGLE_ANDROID_CLIENT_ID=your-android-client-id.apps.googleusercontent.com
EXPO_PUBLIC_ONESIGNAL_APP_ID=your-onesignal-app-id
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
EXPO_PUBLIC_CONVEX_URL=https://your-convex-instance.convex.cloud
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=false
EXPO_PUBLIC_ENABLE_VOICE_MESSAGES=true
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_ANALYTICS=false

# Third-party media & email APIs
PEXELS_API_KEY=
GEMINI_API_KEY=
RESEND_API_KEY=

# Admin & E2E placeholders
ADMIN_EMAIL=
E2E_USER_EMAIL=
E2E_USER_PASSWORD=

# Google Play (optional local)
# If set here, the helper will pick it up from the environment. Otherwise it will read
# from ../aroosi/.env.local and decode automatically.
ANDROID_PUBLISHER_CREDENTIALS=
# Optional release signing if not using Internal App Sharing or debug fallback
ANDROID_KEYSTORE_PASSWORD=
ANDROID_KEY_ALIAS=
ANDROID_KEY_PASSWORD=

# Google Services file locations used by app.config.js
# Set these if your google-services files live in a different path than defaults
# iOS default: ./ios/Aroosi/GoogleService-Info.plist
GOOGLE_SERVICE_INFO_PLIST=
# Android default: ./android/app/google-services.json
GOOGLE_SERVICES_JSON=